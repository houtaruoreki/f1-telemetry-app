<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             x:Class="F1TelemetryApp.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- App Header -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,30">
                <Label Text="F1 Telemetry"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Label Text="Real-time F1 data and analysis"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Navigation Cards -->
            <Frame Padding="20" CornerRadius="10" HasShadow="True" BackgroundColor="#E3F2FD">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToIntroCommand}"/>
                </Frame.GestureRecognizers>
                <VerticalStackLayout Spacing="8">
                    <Label Text="📖 Introduction to F1 &amp; Telemetry"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1976D2"/>
                    <Label Text="Learn about Formula One, telemetry data, and how to use this app"
                           FontSize="14"
                           TextColor="#1565C0"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="20" CornerRadius="10" HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSessionsCommand}"/>
                </Frame.GestureRecognizers>
                <VerticalStackLayout Spacing="8">
                    <Label Text="📅 Sessions"
                           FontSize="20"
                           FontAttributes="Bold"/>
                    <Label Text="Browse F1 sessions, races, and qualifying"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="20" CornerRadius="10" HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToDriversCommand}"/>
                </Frame.GestureRecognizers>
                <VerticalStackLayout Spacing="8">
                    <Label Text="🏎️ Drivers"
                           FontSize="20"
                           FontAttributes="Bold"/>
                    <Label Text="View driver information and statistics"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="20" CornerRadius="10" HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                </Frame.GestureRecognizers>
                <VerticalStackLayout Spacing="8">
                    <Label Text="⚙️ Settings"
                           FontSize="20"
                           FontAttributes="Bold"/>
                    <Label Text="App configuration and preferences"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label Text="Data provided by OpenF1.org"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   FontStyle="Italic"
                   Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
