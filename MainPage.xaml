<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             x:Class="F1TelemetryApp.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- F1 Hero Header -->
            <Grid HeightRequest="180" BackgroundColor="{StaticResource F1Red}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Diagonal accent -->
                <BoxView BackgroundColor="{StaticResource F1DarkRed}"
                         Opacity="0.3"
                         Rotation="-5"
                         Margin="-20"/>

                <VerticalStackLayout VerticalOptions="Center" Spacing="8" Margin="20">
                    <Label Text="F1 TELEMETRY"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           LetterSpacing="2"/>
                    <Label Text="LIVE DATA • REAL-TIME ANALYSIS • PERFORMANCE METRICS"
                           FontSize="11"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           LetterSpacing="1"/>
                    <BoxView HeightRequest="2"
                             WidthRequest="60"
                             BackgroundColor="White"
                             HorizontalOptions="Center"
                             Margin="0,8,0,0"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Navigation Cards -->
            <VerticalStackLayout Padding="16" Spacing="14" BackgroundColor="{StaticResource OffBlack}">

                <!-- Introduction Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1Red}"
                       BackgroundColor="{StaticResource F1DarkGray}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToIntroCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="INTRODUCTION TO F1"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Red}"
                                   LetterSpacing="0.5"/>
                            <Label Text="Learn about Formula One racing and telemetry data"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.9"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="1"
                               Text="▶"
                               FontSize="24"
                               TextColor="{StaticResource F1Red}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Sessions Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSessionsCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="🏁"
                               FontSize="32"
                               VerticalOptions="Center"
                               Margin="0,0,14,0"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="SESSIONS"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LetterSpacing="0.5"/>
                            <Label Text="Browse races, qualifying, and practice sessions"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.9"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="▶"
                               FontSize="24"
                               TextColor="White"
                               Opacity="0.6"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Drivers Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDriversCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="🏎️"
                               FontSize="32"
                               VerticalOptions="Center"
                               Margin="0,0,14,0"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="DRIVERS"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LetterSpacing="0.5"/>
                            <Label Text="View driver profiles and performance statistics"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.9"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="▶"
                               FontSize="24"
                               TextColor="White"
                               Opacity="0.6"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Settings Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="⚙️"
                               FontSize="32"
                               VerticalOptions="Center"
                               Margin="0,0,14,0"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="SETTINGS"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LetterSpacing="0.5"/>
                            <Label Text="Configure app preferences and options"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.9"/>
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="▶"
                               FontSize="24"
                               TextColor="White"
                               Opacity="0.6"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Footer -->
                <VerticalStackLayout Spacing="8" Margin="0,24,0,16">
                    <BoxView HeightRequest="1"
                             BackgroundColor="{StaticResource F1DarkGray}"
                             Margin="0,0,0,12"/>
                    <Label Text="Data provided by OpenF1.org"
                           FontSize="11"
                           TextColor="{StaticResource F1Silver}"
                           HorizontalOptions="Center"
                           FontAttributes="Italic"
                           Opacity="0.7"/>
                    <Label Text="© 2025 F1 Telemetry App"
                           FontSize="10"
                           TextColor="{StaticResource F1Silver}"
                           HorizontalOptions="Center"
                           Opacity="0.5"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
