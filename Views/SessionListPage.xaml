<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.SessionListPage"
             x:DataType="viewmodels:SessionListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource OffBlack}">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Year Selector and Filter -->
        <Frame Grid.Row="0"
               Margin="0"
               Padding="16,12"
               CornerRadius="0"
               HasShadow="False"
               BackgroundColor="{StaticResource F1DarkGray}">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <!-- Year Label and Picker -->
                <Label Grid.Row="0" Grid.Column="0"
                       Text="YEAR:"
                       VerticalOptions="Center"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource F1Silver}"
                       LetterSpacing="0.5"/>

                <Frame Grid.Row="0" Grid.Column="1"
                       Padding="8,0"
                       CornerRadius="6"
                       HasShadow="False"
                       BackgroundColor="{StaticResource Secondary}"
                       BorderColor="{StaticResource F1Red}">
                    <Picker x:Name="YearPicker"
                            SelectedIndex="{Binding SelectedYearIndex}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"/>
                </Frame>

                <Button Grid.Row="0" Grid.Column="2"
                        Text="LOAD"
                        Command="{Binding LoadSessionsCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource F1Red}"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="11"
                        Padding="16,8"
                        CornerRadius="6"/>

                <Button Grid.Row="0" Grid.Column="3"
                        Text="â†»"
                        Command="{Binding RefreshCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="12,8"
                        CornerRadius="6"/>

                <!-- Filter Label and Picker -->
                <Label Grid.Row="1" Grid.Column="0"
                       Text="FILTER:"
                       VerticalOptions="Center"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource F1Silver}"
                       LetterSpacing="0.5"/>

                <Frame Grid.Row="1" Grid.Column="1"
                       Grid.ColumnSpan="3"
                       Padding="8,0"
                       CornerRadius="6"
                       HasShadow="False"
                       BackgroundColor="{StaticResource Secondary}"
                       BorderColor="{StaticResource F1Gold}">
                    <Picker ItemsSource="{Binding FilterOptions}"
                            SelectedItem="{Binding SelectedFilter}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"/>
                </Frame>
            </Grid>
        </Frame>

        <!-- Grouped Sessions List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="12,12,12,0"
                                 BindableLayout.ItemsSource="{Binding SessionGroups}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:SessionGroup">
                        <VerticalStackLayout Margin="0,0,0,12">
                            <!-- Group Header -->
                            <Frame Padding="0"
                                   CornerRadius="10,10,0,0"
                                   HasShadow="False"
                                   BorderColor="{StaticResource F1Red}"
                                   BackgroundColor="{StaticResource F1Red}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=ToggleGroupCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid Padding="16,12" ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="3">
                                        <Label Text="{Binding MeetingName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               LetterSpacing="0.5"/>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding FormattedDate}"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   Opacity="0.9"/>
                                            <Label Text="â€¢"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   Opacity="0.9"/>
                                            <Label Text="{Binding CircuitName}"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   Opacity="0.9"/>
                                            <Label Text="â€¢"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   Opacity="0.9"/>
                                            <Label Text="{Binding SessionCount}"
                                                   FontSize="11"
                                                   TextColor="White"
                                                   Opacity="0.9"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <Label Grid.Column="1"
                                           Text="{Binding IsExpanded, Converter={StaticResource BoolToExpandIconConverter}, ConverterParameter='â–¼,â–¶'}"
                                           FontSize="18"
                                           TextColor="White"
                                           VerticalOptions="Center"
                                           Margin="8,0,0,0"/>
                                </Grid>
                            </Frame>

                            <!-- Sessions in Group -->
                            <VerticalStackLayout IsVisible="{Binding IsExpanded}"
                                                 BindableLayout.ItemsSource="{Binding .}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="models:Session">
                                        <Frame Padding="0"
                                               Margin="0"
                                               CornerRadius="0"
                                               HasShadow="False"
                                               BorderColor="{StaticResource F1DarkGray}"
                                               BackgroundColor="{StaticResource Secondary}">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=SessionSelectedCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Frame.GestureRecognizers>

                                            <Grid Padding="16,12" ColumnDefinitions="8,*,Auto">
                                                <!-- Colored Accent Bar -->
                                                <BoxView Grid.Column="0"
                                                         BackgroundColor="{StaticResource F1Gold}"
                                                         WidthRequest="4"
                                                         CornerRadius="2"/>

                                                <!-- Session Info -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="4"
                                                                     Margin="12,0,0,0">
                                                    <Label Text="{Binding SessionName}"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           TextColor="White"/>
                                                    <HorizontalStackLayout Spacing="8">
                                                        <Label Text="{Binding FormattedTime}"
                                                               FontSize="11"
                                                               TextColor="{StaticResource F1Silver}"/>
                                                        <Frame Padding="6,2"
                                                               CornerRadius="3"
                                                               HasShadow="False"
                                                               BackgroundColor="{StaticResource F1DarkGray}"
                                                               BorderColor="{StaticResource F1Gold}">
                                                            <Label Text="{Binding Status}"
                                                                   FontSize="9"
                                                                   TextColor="{StaticResource F1Silver}"
                                                                   FontAttributes="Bold"
                                                                   LetterSpacing="0.5"/>
                                                        </Frame>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>

                                                <!-- Arrow -->
                                                <Label Grid.Column="2"
                                                       Text="â–¶"
                                                       FontSize="14"
                                                       TextColor="{StaticResource F1Red}"
                                                       VerticalOptions="Center"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <!-- Bottom border for last session in group -->
                            <BoxView HeightRequest="1"
                                     BackgroundColor="{StaticResource F1DarkGray}"
                                     IsVisible="{Binding IsExpanded}"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

                <!-- Empty State -->
                <VerticalStackLayout Padding="20" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=SessionGroups.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <Label Text="ðŸ"
                           FontSize="48"
                           HorizontalOptions="Center"
                           Opacity="0.3"
                           Margin="0,0,0,12"/>
                    <Label Text="NO SESSIONS FOUND"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource F1Silver}"
                           LetterSpacing="0.5"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <Frame Grid.Row="1"
               IsVisible="{Binding IsBusy}"
               BackgroundColor="{StaticResource OffBlack}"
               Opacity="0.9"
               Padding="0"
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="16">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="{StaticResource F1Red}"
                                   HeightRequest="48"
                                   WidthRequest="48"/>
                <Label Text="LOADING SESSIONS..."
                       TextColor="{StaticResource F1Silver}"
                       FontSize="12"
                       FontAttributes="Bold"
                       LetterSpacing="1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
