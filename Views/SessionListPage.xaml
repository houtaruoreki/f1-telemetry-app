<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.SessionListPage"
             x:DataType="viewmodels:SessionListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource OffBlack}">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Year Selector -->
        <Frame Grid.Row="0"
               Margin="0"
               Padding="16,12"
               CornerRadius="0"
               HasShadow="False"
               BackgroundColor="{StaticResource F1DarkGray}">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">
                <Label Text="YEAR:"
                       VerticalOptions="Center"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource F1Silver}"
                       CharacterSpacing="0.5"/>

                <Frame Grid.Column="1"
                       Padding="8,0"
                       CornerRadius="6"
                       HasShadow="False"
                       BackgroundColor="{StaticResource Secondary}"
                       BorderColor="{StaticResource F1Red}">
                    <Picker x:Name="YearPicker"
                            SelectedIndex="{Binding SelectedYearIndex}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"/>
                </Frame>

                <Button Grid.Column="2"
                        Text="LOAD"
                        Command="{Binding LoadSessionsCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource F1Red}"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="16,8"
                        CornerRadius="6"/>

                <Button Grid.Column="3"
                        Text="â†»"
                        Command="{Binding RefreshCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="12,8"
                        CornerRadius="6"/>
            </Grid>
        </Frame>

        <!-- Sessions List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Sessions}"
                        SelectionMode="None"
                        Margin="12,12,12,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Session">
                    <Frame Padding="0"
                           Margin="0,0,0,12"
                           CornerRadius="10"
                           HasShadow="False"
                           BorderColor="{StaticResource F1DarkGray}"
                           BackgroundColor="{StaticResource Secondary}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=SessionSelectedCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="8,*,Auto">

                            <!-- Colored Accent Bar -->
                            <BoxView Grid.Row="0"
                                     Grid.RowSpan="4"
                                     Grid.Column="0"
                                     BackgroundColor="{StaticResource F1Red}"
                                     WidthRequest="4"
                                     CornerRadius="2"
                                     Margin="0,4,12,4"/>

                            <!-- Session Name -->
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding SessionName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   CharacterSpacing="0.3"/>

                            <!-- Status Badge -->
                            <Frame Grid.Row="0"
                                   Grid.Column="2"
                                   Padding="8,4"
                                   CornerRadius="4"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="{StaticResource F1Red}">
                                <Label Text="{Binding Status}"
                                       FontSize="10"
                                       TextColor="{StaticResource F1Silver}"
                                       FontAttributes="Bold"
                                       CharacterSpacing="0.5"/>
                            </Frame>

                            <!-- Location -->
                            <HorizontalStackLayout Grid.Row="1"
                                                   Grid.Column="1"
                                                   Grid.ColumnSpan="2"
                                                   Spacing="6"
                                                   Margin="0,6,0,0">
                                <Label Text="ðŸ“"
                                       FontSize="14"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding Location}"
                                       FontSize="14"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <!-- Circuit -->
                            <Label Grid.Row="2"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding CircuitShortName}"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.8"
                                   Margin="0,2,0,0"/>

                            <!-- Date and Time -->
                            <HorizontalStackLayout Grid.Row="3"
                                                   Grid.Column="1"
                                                   Grid.ColumnSpan="2"
                                                   Spacing="12"
                                                   Margin="0,8,0,0">
                                <Frame Padding="6,3"
                                       CornerRadius="4"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource F1DarkGray}">
                                    <Label Text="{Binding FormattedDate}"
                                           FontSize="11"
                                           TextColor="{StaticResource F1Silver}"/>
                                </Frame>

                                <Frame Padding="6,3"
                                       CornerRadius="4"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource F1DarkGray}">
                                    <Label Text="{Binding FormattedTime}"
                                           FontSize="11"
                                           TextColor="{StaticResource F1Silver}"/>
                                </Frame>

                                <Label Text="â–¶"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Empty View -->
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="ðŸ"
                           FontSize="48"
                           HorizontalOptions="Center"
                           Opacity="0.3"
                           Margin="0,0,0,12"/>
                    <Label Text="NO SESSIONS FOUND"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource F1Silver}"
                           CharacterSpacing="0.5"/>
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="13"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource F1Red}"
                           IsVisible="{Binding HasError}"
                           Margin="0,8,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <Frame Grid.Row="1"
               IsVisible="{Binding IsBusy}"
               BackgroundColor="{StaticResource OffBlack}"
               Opacity="0.9"
               Padding="0"
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="16">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="{StaticResource F1Red}"
                                   HeightRequest="48"
                                   WidthRequest="48"/>
                <Label Text="LOADING SESSIONS..."
                       TextColor="{StaticResource F1Silver}"
                       FontSize="12"
                       FontAttributes="Bold"
                       CharacterSpacing="1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
