<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.SessionListPage"
             x:DataType="viewmodels:SessionListViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Year Selector and Refresh -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Label Text="Year:" VerticalOptions="Center" FontSize="16" FontAttributes="Bold"/>
            <Picker x:Name="YearPicker"
                    SelectedItem="{Binding SelectedYear}"
                    WidthRequest="100"
                    VerticalOptions="Center"/>
            <Button Text="Load"
                    Command="{Binding LoadSessionsCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    VerticalOptions="Center"/>
            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Sessions List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Sessions}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Session">
                    <Frame Padding="10" Margin="5" CornerRadius="8" HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=SessionSelectedCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                            <!-- Session Name -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding SessionName}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>

                            <!-- Status Badge -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Status}"
                                   FontSize="12"
                                   Padding="5,2"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"/>

                            <!-- Location -->
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding Location}"
                                   FontSize="14"
                                   TextColor="Gray"/>

                            <!-- Date and Time -->
                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="10">
                                <Label Text="{Binding FormattedDate}" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding FormattedTime}" FontSize="12" TextColor="Gray"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Empty View -->
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="No sessions found"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Red"
                           IsVisible="{Binding HasError}"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"
                          Color="Blue"/>
    </Grid>
</ContentPage>
