                                <Label Text="Speed" FontSize="12" FontAttributes="Bold" TextColor="#1976D2"/>
                            </Frame>
                            <Label Grid.Row="0" Grid.Column="1" Text="Current velocity in km/h" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

