                            </Frame>
                            <Label Grid.Row="2" Grid.Column="1" Text="Accelerator position (0-100%)" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

                            <Frame Grid.Row="3" Grid.Column="0" Padding="8,4" CornerRadius="6" HasShadow="False" BackgroundColor="#FFEBEE">
                                <Label Text="Brake" FontSize="12" FontAttributes="Bold" TextColor="#C62828"/>
                            </Frame>
                            <Label Grid.Row="3" Grid.Column="1" Text="Brake application status" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

                            <Frame Grid.Row="4" Grid.Column="0" Padding="8,4" CornerRadius="6" HasShadow="False" BackgroundColor="#F3E5F5">
                                <Label Text="Gear" FontSize="12" FontAttributes="Bold" TextColor="#7B1FA2"/>
                            </Frame>
                            <Label Grid.Row="4" Grid.Column="1" Text="Current gear (1-8)" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

                            <Frame Grid.Row="5" Grid.Column="0" Padding="8,4" CornerRadius="6" HasShadow="False" BackgroundColor="#E0F2F1">
                                <Label Text="DRS" FontSize="12" FontAttributes="Bold" TextColor="#00695C"/>
                            </Frame>
                            <Label Grid.Row="5" Grid.Column="1" Text="Drag Reduction System status" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

                            <Frame Grid.Row="6" Grid.Column="0" Padding="8,4" CornerRadius="6" HasShadow="False" BackgroundColor="#FFF9C4">
                                <Label Text="Lap Time" FontSize="12" FontAttributes="Bold" TextColor="#F57F17"/>
                            </Frame>
                            <Label Grid.Row="6" Grid.Column="1" Text="Total time to complete a lap" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>

                            <Frame Grid.Row="7" Grid.Column="0" Padding="8,4" CornerRadius="6" HasShadow="False" BackgroundColor="#FCE4EC">
                                <Label Text="Sectors" FontSize="12" FontAttributes="Bold" TextColor="#C2185B"/>
                            </Frame>
                            <Label Grid.Row="7" Grid.Column="1" Text="Track divided into 3 mini-sections" FontSize="13" TextColor="#555" VerticalOptions="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- How to Use App -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“± How to Use This App"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>

                    <VerticalStackLayout Spacing="15">
                        <!-- Step 1 -->
                        <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                            <Frame Grid.Column="0"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   CornerRadius="18"
                                   Padding="0"
                                   HasShadow="False"
                                   BackgroundColor="#3498db"
                                   VerticalOptions="Start">
                                <Label Text="1"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Browse Sessions" FontSize="16" FontAttributes="Bold" TextColor="#3498db"/>
                                <Label Text="Navigate to the Sessions tab to view F1 races, qualifying, and practice sessions. Filter by year to explore historical data."
                                       FontSize="13"
                                       TextColor="#555"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Step 2 -->
                        <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                            <Frame Grid.Column="0"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   CornerRadius="18"
                                   Padding="0"
                                   HasShadow="False"
                                   BackgroundColor="#2ecc71"
                                   VerticalOptions="Start">
                                <Label Text="2"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Select a Session" FontSize="16" FontAttributes="Bold" TextColor="#2ecc71"/>
                                <Label Text="Tap any session to view detailed information including weather conditions, track details, and the list of participating drivers."
                                       FontSize="13"
                                       TextColor="#555"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Step 3 -->
                        <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                            <Frame Grid.Column="0"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   CornerRadius="18"
                                   Padding="0"
                                   HasShadow="False"
                                   BackgroundColor="#e74c3c"
                                   VerticalOptions="Start">
                                <Label Text="3"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="View Driver Telemetry" FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
                                <Label Text="Tap on any driver to access their complete telemetry data, including lap-by-lap analysis, speed traces, and sector comparisons."
                                       FontSize="13"
                                       TextColor="#555"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Step 4 -->
                        <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                            <Frame Grid.Column="0"
                                   WidthRequest="36"
                                   HeightRequest="36"
                                   CornerRadius="18"
                                   Padding="0"
                                   HasShadow="False"
                                   BackgroundColor="#9b59b6"
                                   VerticalOptions="Start">
                                <Label Text="4"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Analyze Performance" FontSize="16" FontAttributes="Bold" TextColor="#9b59b6"/>
                                <Label Text="Study the interactive charts showing lap time progression, sector analysis, and speed profiles. Tap individual laps for detailed telemetry."
                                       FontSize="13"
                                       TextColor="#555"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Understanding Statistics -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“ˆ Understanding the Statistics"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>

                    <VerticalStackLayout Spacing="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="ðŸ Lap Time" FontSize="15" FontAttributes="Bold" TextColor="#3498db"/>
                            <Label FontSize="13" TextColor="#555" LineHeight="1.3">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="The total time taken to complete one full circuit. Format: "/>
                                        <Span Text="M:SS.mmm " FontAttributes="Bold" TextColor="#e74c3c"/>
                                        <Span Text="(e.g., 1:32.148 = 1 minute, 32 seconds, 148 milliseconds)"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="ðŸ“ Sector Times" FontSize="15" FontAttributes="Bold" TextColor="#2ecc71"/>
                            <Label FontSize="13" TextColor="#555" LineHeight="1.3">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Each lap is divided into 3 sectors. "/>
                                        <Span Text="Sector 1 (Blue), Sector 2 (Red), Sector 3 (Green). " FontAttributes="Bold"/>
                                        <Span Text="Analyzing sectors helps identify where drivers gain or lose time."/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="â­ Personal Best (PB)" FontSize="15" FontAttributes="Bold" TextColor="#f39c12"/>
                            <Label FontSize="13" TextColor="#555" LineHeight="1.3">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Indicates the driver's "/>
                                        <Span Text="fastest lap " FontAttributes="Bold" TextColor="#2ecc71"/>
                                        <Span Text="during that specific session. Look for the green PB badge."/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="ðŸš€ Speed Trace" FontSize="15" FontAttributes="Bold" TextColor="#e74c3c"/>
                            <Label FontSize="13" TextColor="#555" LineHeight="1.3">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Shows speed variations throughout a lap. "/>
                                        <Span Text="Blue = throttle application, Red = braking zones. " FontAttributes="Bold"/>
                                        <Span Text="Helps visualize racing lines and braking points."/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="ðŸŽ¯ Average vs Fastest" FontSize="15" FontAttributes="Bold" TextColor="#9b59b6"/>
                            <Label FontSize="13" TextColor="#555" LineHeight="1.3">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Average Lap Time shows consistency. "/>
                                        <Span Text="Fastest Lap Time shows peak performance. " FontAttributes="Bold"/>
                                        <Span Text="Smaller gap between them indicates better race pace."/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Pro Tips -->
