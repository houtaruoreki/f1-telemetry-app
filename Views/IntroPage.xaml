                            <Label Grid.Row="0" Grid.Column="0" Text="â€¢ " FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="20-24 races per season (Grand Prix)" FontSize="14" TextColor="#555"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="â€¢ " FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
