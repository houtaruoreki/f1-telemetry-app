                            <Label Grid.Row="2" Grid.Column="0" Text="â€¢ " FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="Practice, Qualifying, and Race sessions" FontSize="14" TextColor="#555"/>

                            <Label Grid.Row="3" Grid.Column="0" Text="â€¢ " FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="Speeds exceeding 370 km/h (230 mph)" FontSize="14" TextColor="#555"/>

                            <Label Grid.Row="4" Grid.Column="0" Text="â€¢ " FontSize="16" FontAttributes="Bold" TextColor="#e74c3c"/>
                            <Label Grid.Row="4" Grid.Column="1" Text="Cutting-edge hybrid power units and aerodynamics" FontSize="14" TextColor="#555"/>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- What is Telemetry -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“Š What is Telemetry Data?"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>

                    <Label FontSize="14" TextColor="#555" LineHeight="1.4">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Telemetry is real-time data transmitted from the race car to the team's engineers. "/>
                                <Span Text="F1 cars have hundreds of sensors capturing everything from speed and throttle position to tire temperatures and brake pressure." FontAttributes="Bold"/>
                            </FormattedString>
