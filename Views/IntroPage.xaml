    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <!-- Welcome Section -->
            <Frame Padding="25" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ Welcome to F1 Telemetry"
