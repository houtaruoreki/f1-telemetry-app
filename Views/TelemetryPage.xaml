<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.TelemetryPage"
             x:DataType="viewmodels:TelemetryViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">

            <!-- Driver Information -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True" IsVisible="{Binding Driver, Converter={StaticResource IsNotNullConverter}}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Driver Information"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="120,*">
                        <Label Grid.Row="0" Grid.Column="0" Text="Name:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Driver.BroadcastName}"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Team:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Driver.TeamName}"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Number:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Driver.DriverNumber}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Laps List -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Lap Times"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding Laps}"
                                    SelectedItem="{Binding SelectedLap}"
                                    SelectionMode="Single"
                                    MaximumHeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Lap">
                                <Frame Padding="10" Margin="0,5" CornerRadius="5" HasShadow="False" BorderColor="LightGray">
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">

                                        <!-- Lap Number -->
                                        <Label Grid.Column="0" Grid.RowSpan="2"
                                               Text="{Binding LapNumber, StringFormat='L{0}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0"/>

                                        <!-- Lap Time -->
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Text="{Binding FormattedLapTime}"
                                               FontSize="16"
                                               FontAttributes="Bold"/>

                                        <!-- Sector Times -->
                                        <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="8">
                                            <Label Text="{Binding FormattedSector1, StringFormat='S1: {0}'}"
                                                   FontSize="11"
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding FormattedSector2, StringFormat='S2: {0}'}"
                                                   FontSize="11"
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding FormattedSector3, StringFormat='S3: {0}'}"
                                                   FontSize="11"
                                                   TextColor="Gray"/>
                                        </HorizontalStackLayout>

                                        <!-- Personal Best Badge -->
                                        <Label Grid.Column="2" Grid.RowSpan="2"
                                               Text="PB"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="Green"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding IsPersonalBest}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>
                            <Label Text="No lap data found"
                                   FontSize="14"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"
                                   Margin="0,20"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Car Data Sample -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True" IsVisible="{Binding CarData.Count}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Telemetry Sample (Selected Lap)"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding CarData}"
                                    MaximumHeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:CarData">
                                <Grid ColumnDefinitions="*,*,*,*" Padding="5" RowSpacing="5">
                                    <Label Grid.Column="0" Text="{Binding FormattedSpeed}" FontSize="12"/>
                                    <Label Grid.Column="1" Text="{Binding Rpm, StringFormat='{0} RPM'}" FontSize="12"/>
                                    <Label Grid.Column="2" Text="{Binding NGear, StringFormat='G{0}'}" FontSize="12"/>
                                    <Label Grid.Column="3" Text="{Binding ThrottlePercent}" FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="Note: Full telemetry visualization will be added in Phase 4"
                           FontSize="11"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           FontStyle="Italic"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="Blue"/>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   FontSize="14"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasError}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
