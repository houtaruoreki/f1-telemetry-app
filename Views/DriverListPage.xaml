<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.DriverListPage"
             x:DataType="viewmodels:DriverListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource OffBlack}">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Year Selector -->
        <Frame Grid.Row="0"
               Margin="0"
               Padding="16,12"
               CornerRadius="0"
               HasShadow="False"
               BackgroundColor="{StaticResource F1DarkGray}">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">
                <Label Text="YEAR:"
                       VerticalOptions="Center"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource F1Silver}"
                       LetterSpacing="0.5"/>

                <Frame Grid.Column="1"
                       Padding="8,0"
                       CornerRadius="6"
                       HasShadow="False"
                       BackgroundColor="{StaticResource Secondary}"
                       BorderColor="{StaticResource F1Red}">
                    <Picker x:Name="YearPicker"
                            SelectedIndex="{Binding SelectedYearIndex}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Fill"/>
                </Frame>

                <Button Grid.Column="2"
                        Text="LOAD"
                        Command="{Binding LoadDriversCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource F1Red}"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="12"
                        Padding="16,8"
                        CornerRadius="6"/>

                <Button Grid.Column="3"
                        Text="â†»"
                        Command="{Binding RefreshCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="12,8"
                        CornerRadius="6"/>
            </Grid>
        </Frame>

        <!-- Drivers List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Drivers}"
                        SelectionMode="None"
                        Margin="12,12,12,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Driver">
                    <Frame Padding="0"
                           Margin="0,0,0,12"
                           CornerRadius="10"
                           HasShadow="False"
                           BorderColor="{StaticResource F1DarkGray}"
                           BackgroundColor="{StaticResource Secondary}">
                        <Grid Padding="16" ColumnDefinitions="60,*,Auto" RowDefinitions="Auto,Auto,Auto">

                            <!-- Driver Number Badge -->
                            <Frame Grid.Column="0"
                                   Grid.RowSpan="3"
                                   WidthRequest="56"
                                   HeightRequest="56"
                                   CornerRadius="28"
                                   Padding="0"
                                   HasShadow="False"
                                   BorderColor="{Binding TeamColour}"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   VerticalOptions="Center"
                                   Margin="0,0,12,0">
                                <Label Text="{Binding DriverNumber}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Broadcast Name -->
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding BroadcastName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LetterSpacing="0.3"/>

                            <!-- Full Name -->
                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding FullName}"
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Margin="0,2,0,0"/>

                            <!-- Team and Country -->
                            <HorizontalStackLayout Grid.Column="1"
                                                   Grid.Row="2"
                                                   Spacing="10"
                                                   Margin="0,6,0,0">
                                <Frame Padding="8,3"
                                       CornerRadius="4"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource F1DarkGray}"
                                       BorderColor="{Binding TeamColour}">
                                    <Label Text="{Binding TeamName}"
                                           FontSize="11"
                                           TextColor="{StaticResource F1Silver}"
                                           FontAttributes="Bold"/>
                                </Frame>

                                <Label Text="{Binding CountryCode, Converter={StaticResource CountryCodeToFlagConverter}}"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <!-- Arrow Indicator -->
                            <Label Grid.Column="2"
                                   Grid.RowSpan="3"
                                   Text="â–¶"
                                   FontSize="20"
                                   TextColor="{StaticResource F1Red}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Empty View -->
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="ðŸŽï¸"
                           FontSize="48"
                           HorizontalOptions="Center"
                           Opacity="0.3"
                           Margin="0,0,0,12"/>
                    <Label Text="NO DRIVERS FOUND"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource F1Silver}"
                           LetterSpacing="0.5"/>
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="13"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource F1Red}"
                           IsVisible="{Binding HasError}"
                           Margin="0,8,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <Frame Grid.Row="1"
               IsVisible="{Binding IsBusy}"
               BackgroundColor="{StaticResource OffBlack}"
               Opacity="0.9"
               Padding="0"
               CornerRadius="0"
               HasShadow="False">
            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="16">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="{StaticResource F1Red}"
                                   HeightRequest="48"
                                   WidthRequest="48"/>
                <Label Text="LOADING DRIVERS..."
                       TextColor="{StaticResource F1Silver}"
                       FontSize="12"
                       FontAttributes="Bold"
                       LetterSpacing="1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
