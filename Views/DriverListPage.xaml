<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.DriverListPage"
             x:DataType="viewmodels:DriverListViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Year Selector and Refresh -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Label Text="Year:" VerticalOptions="Center" FontSize="16" FontAttributes="Bold"/>
            <Picker x:Name="YearPicker"
                    SelectedItem="{Binding SelectedYear}"
                    WidthRequest="100"
                    VerticalOptions="Center"/>
            <Button Text="Load"
                    Command="{Binding LoadDriversCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    VerticalOptions="Center"/>
            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Drivers List -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Drivers}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Driver">
                    <Frame Padding="15" Margin="5" CornerRadius="8" HasShadow="True">
                        <Grid ColumnDefinitions="50,*" RowDefinitions="Auto,Auto,Auto">

                            <!-- Driver Number with Team Color -->
                            <Frame Grid.Column="0" Grid.RowSpan="3"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   CornerRadius="25"
                                   Padding="0"
                                   HasShadow="False"
                                   BorderColor="{Binding TeamColour}"
                                   VerticalOptions="Center">
                                <Label Text="{Binding DriverNumber}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Driver Name -->
                            <Label Grid.Column="1" Grid.Row="0"
                                   Text="{Binding BroadcastName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   Margin="10,0,0,0"/>

                            <!-- Full Name -->
                            <Label Grid.Column="1" Grid.Row="1"
                                   Text="{Binding FullName}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   Margin="10,0,0,0"/>

                            <!-- Team Name and Country -->
                            <HorizontalStackLayout Grid.Column="1" Grid.Row="2" Spacing="10" Margin="10,5,0,0">
                                <Label Text="{Binding TeamName}"
                                       FontSize="12"
                                       TextColor="DarkGray"/>
                                <Label Text="{Binding CountryCode}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       FontAttributes="Italic"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Empty View -->
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="No drivers found"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Red"
                           IsVisible="{Binding HasError}"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"
                          Color="Blue"/>
    </Grid>
</ContentPage>
