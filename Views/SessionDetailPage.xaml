<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.SessionDetailPage"
             x:DataType="viewmodels:SessionDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="20">

            <!-- Session Information -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ Session Information"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>

                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="12">
                        <Label Grid.Row="0" Grid.Column="0" Text="Session:" FontAttributes="Bold" TextColor="#666"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Session.SessionName}" FontSize="16" Margin="15,0,0,0"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Location:" FontAttributes="Bold" TextColor="#666"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Session.Location}" FontSize="16" Margin="15,0,0,0"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Date:" FontAttributes="Bold" TextColor="#666"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Session.FormattedDate}" FontSize="16" Margin="15,0,0,0"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Status:" FontAttributes="Bold" TextColor="#666"/>
                        <Frame Grid.Row="3" Grid.Column="1"
                               Padding="8,4"
                               CornerRadius="8"
                               HasShadow="False"
                               BackgroundColor="#E3F2FD"
                               HorizontalOptions="Start"
                               Margin="15,0,0,0">
                            <Label Text="{Binding Session.Status}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1976D2"/>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Weather Information -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White" IsVisible="{Binding CurrentWeather, Converter={StaticResource IsNotNullConverter}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸŒ¤ï¸ Weather Conditions"
                           FontSize="22"
                           FontAttributes="Bold"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="15">
                        <!-- Air Temperature -->
                        <Frame Grid.Column="0" Grid.Row="0"
                               Padding="15"
                               CornerRadius="10"
                               HasShadow="False"
                               BackgroundColor="#FFF3E0">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Air Temp" FontSize="12" TextColor="#666"/>
                                <Label Text="{Binding CurrentWeather.FormattedAirTemp}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#FF6F00"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Track Temperature -->
                        <Frame Grid.Column="1" Grid.Row="0"
                               Padding="15"
                               CornerRadius="10"
                               HasShadow="False"
                               BackgroundColor="#FCE4EC">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Track Temp" FontSize="12" TextColor="#666"/>
                                <Label Text="{Binding CurrentWeather.FormattedTrackTemp}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#C2185B"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Humidity -->
                        <Frame Grid.Column="0" Grid.Row="1"
                               Padding="15"
                               CornerRadius="10"
                               HasShadow="False"
                               BackgroundColor="#E0F2F1">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Humidity" FontSize="12" TextColor="#666"/>
                                <Label Text="{Binding CurrentWeather.FormattedHumidity}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#00695C"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Condition -->
                        <Frame Grid.Column="1" Grid.Row="1"
                               Padding="15"
                               CornerRadius="10"
                               HasShadow="False"
                               BackgroundColor="#E8EAF6">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Condition" FontSize="12" TextColor="#666"/>
                                <Label Text="{Binding CurrentWeather.Condition}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#3F51B5"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Drivers List -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸŽï¸ Participating Drivers"
                           FontSize="22"
                           FontAttributes="Bold"/>
                    <Label Text="Tap on a driver to view their telemetry"
                           FontSize="14"
                           TextColor="Gray"
                           Margin="0,0,0,5"/>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <CollectionView ItemsSource="{Binding Drivers}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Driver">
                                <Frame Padding="12" Margin="0,5" CornerRadius="10" HasShadow="False" BackgroundColor="#F8F9FA">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionDetailViewModel}}, Path=ViewTelemetryCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid ColumnDefinitions="50,*,Auto">
                                        <!-- Driver Number Badge -->
                                        <Frame Grid.Column="0"
                                               WidthRequest="45"
                                               HeightRequest="45"
                                               CornerRadius="22"
                                               Padding="0"
                                               HasShadow="False"
                                               BorderColor="{Binding TeamColour}"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding DriverNumber}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>

                                        <VerticalStackLayout Grid.Column="1" Spacing="3" Margin="10,0,0,0" VerticalOptions="Center">
                                            <Label Text="{Binding BroadcastName}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding TeamName}"
                                                   FontSize="13"
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="2"
                                               Text="â†’"
                                               FontSize="24"
                                               TextColor="#3498db"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>
                            <VerticalStackLayout Spacing="10" Padding="30">
                                <Label Text="No drivers found"
                                       FontSize="16"
                                       TextColor="Gray"
                                       HorizontalOptions="Center"/>
                                <Label Text="Driver data may not be available for this session"
                                       FontSize="12"
                                       TextColor="LightGray"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Indicator -->
            <Frame Padding="30" CornerRadius="12" HasShadow="True" BackgroundColor="White" IsVisible="{Binding IsBusy}">
                <VerticalStackLayout Spacing="15">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                      Color="#3498db"
                                      WidthRequest="40"
                                      HeightRequest="40"
                                      HorizontalOptions="Center"/>
                    <Label Text="Loading session details..."
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="#FFEBEE" IsVisible="{Binding HasError}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="âš ï¸ Error"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#C62828"/>
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           TextColor="#C62828"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
