<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:F1TelemetryApp.ViewModels"
             xmlns:models="clr-namespace:F1TelemetryApp.Models"
             x:Class="F1TelemetryApp.Views.SessionDetailPage"
             x:DataType="viewmodels:SessionDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Session Header Banner -->
            <Grid HeightRequest="120" BackgroundColor="{StaticResource F1Red}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Diagonal accent -->
                <BoxView BackgroundColor="{StaticResource F1DarkRed}"
                         Opacity="0.3"
                         Rotation="-5"
                         Margin="-20"/>

                <VerticalStackLayout VerticalOptions="Center" Spacing="6" Margin="20">
                    <Label Text="{Binding Session.SessionName}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           LetterSpacing="1"/>
                    <Label Text="{Binding Session.Location}"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           LetterSpacing="0.5"/>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Padding="16" Spacing="16" BackgroundColor="{StaticResource OffBlack}">

                <!-- Session Information Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <Label Text="SESSION INFORMATION"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Red}"
                                   LetterSpacing="1"/>
                        </Grid>

                        <!-- Content -->
                        <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="14">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="CIRCUIT:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Session.CircuitShortName}"
                                   FontSize="15"
                                   TextColor="White"
                                   Margin="12,0,0,0"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="DATE:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Session.FormattedDate}"
                                   FontSize="15"
                                   TextColor="White"
                                   Margin="12,0,0,0"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="TIME:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   Text="{Binding Session.FormattedTime}"
                                   FontSize="15"
                                   TextColor="White"
                                   Margin="12,0,0,0"/>

                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="STATUS:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Frame Grid.Row="3" Grid.Column="1"
                                   Padding="8,4"
                                   CornerRadius="4"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="{StaticResource F1Red}"
                                   HorizontalOptions="Start"
                                   Margin="12,0,0,0">
                                <Label Text="{Binding Session.Status}"
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Silver}"
                                       LetterSpacing="0.5"/>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Weather Information Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}"
                       IsVisible="{Binding CurrentWeather, Converter={StaticResource IsNotNullConverter}}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸŒ¤ï¸"
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Label Text="WEATHER CONDITIONS"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Silver}"
                                       LetterSpacing="1"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Weather Grid -->
                        <Grid Padding="12" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                            <!-- Air Temperature -->
                            <Frame Grid.Column="0" Grid.Row="0"
                                   Padding="12"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="#FF6F00">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="AIR TEMP"
                                           FontSize="10"
                                           TextColor="{StaticResource F1Silver}"
                                           LetterSpacing="0.5"/>
                                    <Label Text="{Binding CurrentWeather.FormattedAirTemp}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#FF6F00"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Track Temperature -->
                            <Frame Grid.Column="1" Grid.Row="0"
                                   Padding="12"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="#C2185B">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="TRACK TEMP"
                                           FontSize="10"
                                           TextColor="{StaticResource F1Silver}"
                                           LetterSpacing="0.5"/>
                                    <Label Text="{Binding CurrentWeather.FormattedTrackTemp}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#C2185B"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Humidity -->
                            <Frame Grid.Column="0" Grid.Row="1"
                                   Padding="12"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="#00BCD4">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="HUMIDITY"
                                           FontSize="10"
                                           TextColor="{StaticResource F1Silver}"
                                           LetterSpacing="0.5"/>
                                    <Label Text="{Binding CurrentWeather.FormattedHumidity}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#00BCD4"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Condition -->
                            <Frame Grid.Column="1" Grid.Row="1"
                                   Padding="12"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource F1DarkGray}"
                                   BorderColor="{StaticResource F1Gold}">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="CONDITION"
                                           FontSize="10"
                                           TextColor="{StaticResource F1Silver}"
                                           LetterSpacing="0.5"/>
                                    <Label Text="{Binding CurrentWeather.Condition}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource F1Gold}"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Drivers List Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="PARTICIPATING DRIVERS"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Red}"
                                       LetterSpacing="1"/>
                                <Label Text="Tap on a driver to view their telemetry"
                                       FontSize="11"
                                       TextColor="{StaticResource F1Silver}"
                                       Opacity="0.8"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Drivers Collection -->
                        <CollectionView ItemsSource="{Binding Drivers}" Margin="12,12,12,16">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Driver">
                                    <Frame Padding="0"
                                           Margin="0,0,0,10"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           BackgroundColor="{StaticResource F1DarkGray}">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionDetailViewModel}}, Path=ViewTelemetryCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>

                                        <Grid Padding="12" ColumnDefinitions="50,*,Auto">
                                            <!-- Driver Number Badge -->
                                            <Frame Grid.Column="0"
                                                   WidthRequest="48"
                                                   HeightRequest="48"
                                                   CornerRadius="24"
                                                   Padding="0"
                                                   HasShadow="False"
                                                   BorderColor="{Binding TeamColour}"
                                                   BackgroundColor="{StaticResource F1Black}"
                                                   VerticalOptions="Center">
                                                <Label Text="{Binding DriverNumber}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Frame>

                                            <!-- Driver Info -->
                                            <VerticalStackLayout Grid.Column="1"
                                                                 Spacing="3"
                                                                 Margin="12,0,0,0"
                                                                 VerticalOptions="Center">
                                                <Label Text="{Binding BroadcastName}"
                                                       FontSize="15"
                                                       FontAttributes="Bold"
                                                       TextColor="White"/>
                                                <Label Text="{Binding TeamName}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource F1Silver}"/>
                                            </VerticalStackLayout>

                                            <!-- Arrow -->
                                            <Label Grid.Column="2"
                                                   Text="â–¶"
                                                   FontSize="18"
                                                   TextColor="{StaticResource F1Red}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.EmptyView>
                                <VerticalStackLayout Spacing="12" Padding="30">
                                    <Label Text="ðŸŽï¸"
                                           FontSize="40"
                                           HorizontalOptions="Center"
                                           Opacity="0.3"/>
                                    <Label Text="NO DRIVERS FOUND"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource F1Silver}"
                                           HorizontalOptions="Center"
                                           LetterSpacing="0.5"/>
                                    <Label Text="Driver data may not be available for this session"
                                           FontSize="11"
                                           TextColor="{StaticResource F1Silver}"
                                           Opacity="0.6"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Loading Indicator -->
                <Frame Padding="30"
                       CornerRadius="12"
                       HasShadow="False"
                       BackgroundColor="{StaticResource Secondary}"
                       BorderColor="{StaticResource F1DarkGray}"
                       IsVisible="{Binding IsBusy}">
                    <VerticalStackLayout Spacing="16">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                          Color="{StaticResource F1Red}"
                                          WidthRequest="48"
                                          HeightRequest="48"
                                          HorizontalOptions="Center"/>
                        <Label Text="LOADING SESSION DETAILS..."
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="{StaticResource F1Silver}"
                               LetterSpacing="1"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Error Message -->
                <Frame Padding="20"
                       CornerRadius="12"
                       HasShadow="False"
                       BackgroundColor="{StaticResource F1DarkRed}"
                       BorderColor="{StaticResource F1Red}"
                       IsVisible="{Binding HasError}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="âš ï¸ ERROR"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               LetterSpacing="1"/>
                        <Label Text="{Binding ErrorMessage}"
                               FontSize="13"
                               TextColor="White"
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
