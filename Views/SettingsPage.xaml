<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1TelemetryApp.Views.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- App Information -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="App Information"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="120,*">
                        <Label Grid.Row="0" Grid.Column="0" Text="App Name:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="F1 Telemetry"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Version:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="1.0.0"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Data Source:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="OpenF1 API"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Cache Management -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Cache Management"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <Label Text="Cache helps improve app performance by storing frequently accessed data locally."
                           FontSize="14"
                           TextColor="Gray"/>

                    <Button Text="Clear Cache"
                            Clicked="OnClearCacheClicked"
                            HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- About -->
            <Frame Padding="15" CornerRadius="8" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="About"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <Label FontSize="14" TextColor="Gray">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="This app provides F1 telemetry data using the free OpenF1 API. "/>
                                <Span Text="Built with .NET MAUI following SOLID principles and clean architecture."/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="Data provided by OpenF1.org"
                           FontSize="12"
                           TextColor="Gray"
                           FontStyle="Italic"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Future Settings Placeholder -->
            <Label Text="More settings will be added in future updates"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   FontStyle="Italic"
                   Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
