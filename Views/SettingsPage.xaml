<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1TelemetryApp.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="{StaticResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Settings Header -->
            <Grid HeightRequest="100" BackgroundColor="{StaticResource F1DarkGray}">
                <VerticalStackLayout VerticalOptions="Center" Spacing="4" Margin="20">
                    <Label Text="SETTINGS"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           LetterSpacing="2"/>
                    <Label Text="App Configuration & Information"
                           FontSize="12"
                           TextColor="{StaticResource F1Silver}"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           LetterSpacing="0.5"/>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Padding="16" Spacing="16" BackgroundColor="{StaticResource OffBlack}">

                <!-- App Information Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="â„¹ï¸"
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Label Text="APP INFORMATION"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Red}"
                                       LetterSpacing="1"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Content -->
                        <Grid Padding="16" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="110,*" RowSpacing="12">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="APP NAME:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="F1 Telemetry"
                                   FontSize="14"
                                   TextColor="White"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="VERSION:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="1.0.0"
                                   FontSize="14"
                                   TextColor="White"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="DATA SOURCE:"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource F1Silver}"
                                   LetterSpacing="0.5"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   Text="OpenF1 API"
                                   FontSize="14"
                                   TextColor="White"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Cache Management Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ—„ï¸"
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Label Text="CACHE MANAGEMENT"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Silver}"
                                       LetterSpacing="1"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Content -->
                        <VerticalStackLayout Padding="16" Spacing="14">
                            <Label Text="Cache helps improve app performance by storing frequently accessed data locally. Clear cache if you experience data issues."
                                   FontSize="13"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.9"/>

                            <Button Text="CLEAR CACHE"
                                    Clicked="OnClearCacheClicked"
                                    BackgroundColor="{StaticResource F1Red}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    CornerRadius="6"
                                    Padding="20,12"
                                    HorizontalOptions="Start"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- About Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ“–"
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Label Text="ABOUT"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Silver}"
                                       LetterSpacing="1"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Content -->
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <Label FontSize="13" TextColor="{StaticResource F1Silver}" Opacity="0.9">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="This app provides real-time F1 telemetry data using the free OpenF1 API. "/>
                                        <Span Text="Built with .NET MAUI following SOLID principles and clean architecture." FontAttributes="Italic"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <BoxView HeightRequest="1"
                                     BackgroundColor="{StaticResource F1DarkGray}"
                                     Margin="0,8"/>

                            <Label Text="Data provided by OpenF1.org"
                                   FontSize="11"
                                   TextColor="{StaticResource F1Silver}"
                                   FontAttributes="Italic"
                                   Opacity="0.7"/>

                            <Label Text="Â© 2025 F1 Telemetry App"
                                   FontSize="10"
                                   TextColor="{StaticResource F1Silver}"
                                   Opacity="0.5"
                                   Margin="0,4,0,0"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Features Card -->
                <Frame Padding="0"
                       CornerRadius="12"
                       HasShadow="False"
                       BorderColor="{StaticResource F1DarkGray}"
                       BackgroundColor="{StaticResource Secondary}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid Padding="16,12" BackgroundColor="{StaticResource F1DarkGray}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš¡"
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                <Label Text="FEATURES"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource F1Gold}"
                                       LetterSpacing="1"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Content -->
                        <VerticalStackLayout Padding="16" Spacing="10">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ“"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Start"/>
                                <Label Text="Real-time F1 session data"
                                       FontSize="13"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ“"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Start"/>
                                <Label Text="Driver telemetry and lap times"
                                       FontSize="13"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ“"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Start"/>
                                <Label Text="Weather and track conditions"
                                       FontSize="13"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ“"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Start"/>
                                <Label Text="Performance analytics and charts"
                                       FontSize="13"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="âœ“"
                                       FontSize="16"
                                       TextColor="{StaticResource F1Red}"
                                       VerticalOptions="Start"/>
                                <Label Text="Historical data from 2018 onwards"
                                       FontSize="13"
                                       TextColor="{StaticResource F1Silver}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Footer -->
                <VerticalStackLayout Spacing="8" Margin="0,16,0,16">
                    <BoxView HeightRequest="1"
                             BackgroundColor="{StaticResource F1DarkGray}"/>
                    <Label Text="More settings will be added in future updates"
                           FontSize="11"
                           TextColor="{StaticResource F1Silver}"
                           HorizontalOptions="Center"
                           FontAttributes="Italic"
                           Opacity="0.6"
                           Margin="0,8,0,0"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
