<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="F1TelemetryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:F1TelemetryApp"
    xmlns:views="clr-namespace:F1TelemetryApp.Views"
    Title="F1 Telemetry">

    <!-- Main Tab Bar -->
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="main" />

        <ShellContent
            Title="Sessions"
            Icon="calendar.png"
            ContentTemplate="{DataTemplate views:SessionListPage}"
            Route="sessions" />

        <ShellContent
            Title="Drivers"
            Icon="person.png"
            ContentTemplate="{DataTemplate views:DriverListPage}"
            Route="drivers" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="settings" />
    </TabBar>

</Shell>
